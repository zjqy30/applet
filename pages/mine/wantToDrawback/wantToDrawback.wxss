/* pages/mine/wantToDrawback/wantToDrawback.wxss */

page {
 background: #f5f5f5;
}
.hidden {
 display: none;
}

.show {
 display: block;
}
.wx-each {
 padding: 24rpx 30rpx 14rpx;
 position: relative;
 overflow: hidden;
 margin-bottom: 20rpx;
 background: #fff;
 line-height: 1;
 z-index: 10;
 width: 100%;
}

.wx-left {
 float: left;
 overflow: hidden;
}

.wx-big {
 width: 204rpx;
 height: 204rpx;
 position: relative;
}

.wx-right {
 width: calc(100% - 224rpx);
 float: left;
 font-size: 30rpx;
 margin-left: 20rpx;
 line-height: 38rpx;
}

.wx-name {
 font-weight: bold;
 width: 240rpx;
 overflow: hidden;
 text-overflow: ellipsis;
 white-space: nowrap;
 margin-bottom: 10rpx;
 margin-top: 0rpx;
 float: left;
}

.wx-common {
 clear: both;
 display: block;
 color: #858585;
 font-size: 20rpx;
 width: 400rpx;
 text-overflow: ellipsis;
 overflow: hidden;
 white-space: nowrap;
 margin-bottom: 10rpx;
}

.wx-status {
 float: right;
 color: #f03;
 font-size: 20rpx;
}

.wx-label-mini {
 clear: both;
 color: #858585;
 font-size: 20rpx;
 margin-bottom: 6rpx;
}

.wx-label-mini text {
 background: #f6f5f6;
 padding: 4rpx 10rpx;
 margin-right: 20rpx;
}

.wx-fans-common {
 display: block;
 color: #858585;
 font-size: 20rpx;
}

.wx-money {
 color: #f03;
 font-size: 28rpx;
}

.wx-red {
 color: #f03;
 font-size: 28rpx;
}

.wx-fans-num {
 margin-right: 20rpx;
}

.wx-sex {
 width: 22rpx;
 height: 22rpx;
 float: left;
 margin-top: 6rpx;
}

.wx-more {
 width: 22rpx;
 height: 6rpx;
 float: right;
 margin-top: 6rpx;
}

/* 标题 */

.wx-title {
 color: #333;
 font-size: 24rpx;
 background: #fff;
 padding: 24rpx 30rpx 0;
}

.wx-drawback {
 width: 100%;
 background: #fff;
 margin-top: 30rpx;
 color: #333;
 font-size: 24rpx;
 padding: 24rpx 24px;
 line-height: 3;
 overflow: hidden;
}

.wx-drawback label {
 width: 120rpx;
 float: left;
}

.wx-drawback input {
 width: calc(100% - 168rpx);
 float: left;
 margin-top: 10rpx;
}

.wx-submit{
 width: 80%;
 background:#f03;
 margin:0 auto;
 color: #fff;
font-size: 30rpx;
margin-top:152rpx;
height: 88rpx;
line-height: 88rpx;
}

/* 正在审核样式 */

.wx-pop-info {
 position: absolute;
 top: 380rpx;
 left: 0;
 right: 0;
 margin: 0 auto;
 background: #fff;
 width: 80%;
 text-align: center;
 z-index: 30;
 padding-bottom: 80rpx;
 border-radius: 10rpx;
}

.wx-pop-info image {
 width: 248rpx;
 height: 269rpx;
 margin-top:-133rpx;
 margin-bottom: 40rpx;
}
.wx-pop-info text{
 display: block;
 color: #333;
 font-size: 28rpx;
 margin-bottom:40rpx;
}
.wx-pop-info .wx-pretime{
 color: #858585;
 font-size: 22rpx;
}

/* 遮罩 */

.zhezhao {
 width: 100%;
 height: 100%;
 position: fixed;
 background-color: #999;
 z-index: 10;
 top: 0;
 left: 0;
 opacity: 0.5;
}