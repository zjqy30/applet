/* pages/mine/correctphone/correctphone.wxss */

.wx-container {
 padding: 30rpx;
 margin-top: 80rpx;
}

.wx-input {
 overflow: hidden;
 border-bottom: 1rpx solid #f5f5f5;
 margin-bottom: 60rpx;
 padding: 10rpx 0;
}

label {
 color: #333;
 font-size: 30rpx;
 float: left;
 width: 60rpx;
}

.wx-input input {
 float: left;
 margin: -5rpx 0 0 30rpx;
 width: calc(100% - 320rpx);
 color: #858585;
 font-size: 30rpx;
}

.wx-code {
 width: 200rpx;
 color: #858585;
 font-size: 24rpx;
 padding: 0;
 float: right;
 background: #fff;
}

.wx-code:after {
 border: 0;
 border-radius: 0;
}

.wx-submit {
 width: 90%;
 margin: 100rpx auto;
 background: #f03;
 color: #fff;
}

.wx-submit::after {
 border: 0;
}
