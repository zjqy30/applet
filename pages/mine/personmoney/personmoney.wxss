/* pages/mine/personmoney/personmoney.wxss */
.wx-nodata {
  color: #666;
  font-size: 32rpx;
  text-align: center;
  margin-top: 200rpx;
}
/* 记录 */

.wx-record-list {
 position: relative;
 background: #fff;
 width: 100%;
 overflow: hidden;
}

.wx-each-record {
 padding: 20rpx 30rpx;
 overflow: hidden;
 font-size: 24rpx;
 color: #333;
 line-height: 48rpx;
 position: relative;
}

.wx-each-record::after {
 content: '';
 background: #f5f5f5;
 width: calc(100% + 60rpx);
 height: 1rpx;
 position: absolute;
 top: 0;
 left:0;
 bottom: 1rpx;
}

.wx-record-list image {
 width: 40rpx;
 height: 40rpx;
 float: left;
 margin: 20rpx 30rpx 0 0;
}

.wx-name {
 float: left;
}

.wx-date, .wx-minipro {
 display: block;
 color: #858585;
 font-size: 16rpx;
}

.wx-right {
 float: right;
}

.wx-change {
 display: block;
 font-size: 30rpx;
}
