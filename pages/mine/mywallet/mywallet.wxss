/* pages/mine/mywallet/mywallet.wxss */

page {
 background: #f2f2f2;
}

.hover {
 background: #f5f5f5;
}
.wx-status{
 font-size: 16rpx;
 color: #f03;
 border: 1rpx solid #f03;
 padding: 2rpx 8rpx;
 border-radius: 6rpx;
 margin-left:6rpx;
}
.wx-top {
 height: 314rpx;
 background: -webkit-linear-gradient(left, #f03, #ff4e4e);
 overflow: hidden;
 position: relative;
 width: 100vw;
 color: #fff;
}

.wx-overage {
 position: absolute;
 top: 61rpx;
 left: 24rpx;
 font-size: 24rpx;
}

.wx-money {
 position: absolute;
 bottom: 18rpx;
 left: 24rpx;
 font-size: 90rpx;
}

/* 提现 */

.wx-withdraw {
 background: #fff;
 overflow: hidden;
 padding: 20rpx 30rpx;
 font-size: 28rpx;
}

.wx-withdraw image {
 width: 46rpx;
 height: 46rpx;
 float: left;
 margin-right: 40rpx;
}

.wx-withdraw text {
 float: left;
 margin-top: 6rpx;
}

/* 分割条 */

.wx-split {
 width: 100%;
 height: 20rpx;
 background: #f2f2f2;
}

/* 记录 */

.wx-record-list {
 position: relative;
 background: #fff;
 width: 100%;
 overflow: hidden;
}

.wx-each-record {
 padding: 20rpx 30rpx;
 overflow: hidden;
 font-size: 24rpx;
 color: #333;
 line-height: 48rpx;
 position: relative;
}

.wx-each-record::after {
 content: '';
 background: #f5f5f5;
 width: calc(100% + 60rpx);
 height: 1rpx;
 position: absolute;
 top: 0;
 left:0;
 bottom: 1rpx;
}

.wx-record-list image {
 width: 40rpx;
 height: 40rpx;
 float: left;
 margin: 20rpx 30rpx 0 0;
}

.wx-name {
 float: left;
}

.wx-date, .wx-minipro {
 display: block;
 color: #858585;
 font-size: 16rpx;
}

.wx-right {
 float: right;
}

.wx-change {
 display: block;
 font-size: 30rpx;
}
