page {
  background-color: #f1f1f1;
}

.bg-white {
  /* background-color: #fff; */
  color: #666;
}
.test {
  background-color: #fff;
  width: 80%;
  margin: 0 auto;
  border-radius: 0;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  display: flex;
  justify-content: center;
  margin-top:20rpx;
  padding: 30rpx;
  padding-bottom:0;
}

.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 700rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.hide_space {
  /* width: 76vw; */
  height: 100%;
  margin-top: 30rpx;
}

.diytip {
  width: 100%;
  text-indent: 50rpx;
  margin-top: 20rpx;
  line-height: 40rpx;
}

.line {
  border-bottom: 1rpx solid #eee;
  width: 280rpx;
}

.diy_but {
  width: 25vw;
  height: 80rpx;
  border-radius: 5%;
  font-size: 55rpx;
  opacity: 0.66;
  text-align: center;
  align-items: center;
  margin-top: 30rpx;
  margin-left: 25vw;
  line-height: 80rpx;
}

.item {
  width: 50%;
  margin-top: -5rpx;
}

.user {
  border-radius: 30rpx;
  width: 100%;
  margin-top: 30rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 20rpx;
  background: #333;
  color: #fff;
}

.user .user-top {
  border-radius: 20rpx;
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
}

.user-bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
  width: 100%;
  height: 100%;
  background-color: #3e8795;
  background-position: center center;
  background-size: cover;
  background-repeat: no-repeat;
  opacity: 0.5;
  -webkit-transform: scale(1.2);
  transform: scale(1.2);
  filter: blur(5px);
}

.user-img image {
  width: 250rpx;
  height: 250rpx;
}

.user-text {
  width: 30%;
  padding-left: 22rpx;
  line-height: 60rpx;
  flex: 1;
}

.user-name {
  width: 60%;
  font-size: 40rpx;
}

.user-name text {
  color: #aaa;
  font-size: 32rpx;
}

.user .user-sub {
  display: block;
  width: auto;
}

.user-img {
  border-radius: 110rpx;
  height: 250rpx;
}

.user-nav {
  display: flex;
  padding: 10rpx 0 0;
  background: #fff;
}

.user-nav.icon-nav-box .icon-nav {
  padding: 0;
  width: 100%;
  height: auto;
  align-items: center;
}

.user-nav.icon-nav-box .icon-nav-navigator {
  margin: 20rpx 0 10rpx;
  width: 25%;
}

.user-nav .icon-nav-navigator:nth-child(1) .iconfont {
  background: #f1a077;
}

.user-nav .icon-nav-navigator:nth-child(2) .iconfont {
  background: #7eb1eb;
}

.user-nav .icon-nav-navigator:nth-child(3) .iconfont {
  background: #f1888b;
}

.user-nav .icon-nav-navigator:nth-child(4) .iconfont {
  background: #68cd93;
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 250rpx;
  height: 250rpx;
}

.UCenter-bg .animation-wave {
  position: absolute;
  bottom: 0;
}

.test_icon {
  width: 200rpx;
  height: 200rpx;
}

.text-content {
  width: 80%;
  padding-top: 0;
  padding: 30rpx;
  margin: 0 auto;
  font-size: 28rpx;
  background: #fff;
  line-height: 44rpx;
  margin-bottom:20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.pure {
  width: 80%;
  margin: auto auto;
  background: #fff;
  padding: 30rpx;
  font-size: 28rpx;
  background: #fff;
  line-height: 44rpx;
  padding-bottom: 0;
}

.margin-top-sm {
  margin-bottom: 20rpx;
}
