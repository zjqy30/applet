page {
  background: -webkit-linear-gradient(left, #f03, #ff4e4e);
  padding-top:20rpx;
}
.hover {
  background: #f2f2f2;
}
.wx-step {
  width: 70%;
  margin: 0 auto;
}

.wx-each-step {
  text-align: center;
  display: inline-block;
  width: 33.333%;
  height: 60rpx;
  line-height: 50rpx;
  position: relative;
}

.wx-each-step text {

  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  line-height: 20rpx;
  margin: auto 0;
  border-radius: 10rpx;
  background: #b3172d;
  position: relative;
  z-index: 10;


}

.wx-first {
  background: #fff !important;
}

.wx-each-step::before {
  content: '';
  width: 100%;
  height: 2rpx;
  background: #b3172d;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto 0;
  right: -80rpx;
  z-index: 5;
}

.wx-each-step:last-child::before {
  background: none;
}

/* 填写 */
.wx-fill {
  display: block;
  background: #fff;
  width:90%;
  margin: 20rpx auto;
 padding-top:20rpx;
  color: #333;
  font-size: 28rpx;
}

.wx-input {
  padding: 30rpx 40rpx;
  width: calc(100% - 80rpx);
  position: relative;
  overflow: hidden;
}
.wx-input text{
  float: left;
  width: 120rpx;

}
.wx-line text::after{
  content:'';
  position: absolute;
  right:20rpx;
  top:0;
  bottom:0;
  margin:auto 0;
  width: 24rpx;
  height: 24rpx;
  background: url(data:image/png;base64,) no-repeat center;
  background-size:100%;
}

.wx-input::after{
  content:'';
  position: absolute;
  left:30rpx;
  bottom:0;
  width: 90%;
  /* height: 1rpx; */
  border:0.5rpx solid #333;
  opacity: 0.1;
}

.wx-select{
  float: left;
  width: calc(100% - 200rpx);
  margin-top:-5rpx;
  margin-left:10rpx;
  font-size: 24rpx;
}
/* 说明 */
.wx-info{
  display: inline-block;
  font-size: 20rpx;
  color: #858585;
  padding: 20rpx 40rpx;
  width: calc(100% - 80rpx);
}

/* 下一步按钮 */
button {
  padding: 20rpx;
  font-size: 30rpx;
  background: #fff;
  color: #FF0033;
  margin-top:20rpx;

}

button::after {
  padding: 20rpx;
  border: 0;
  border-radius: 0;
  border-top:0.5rpx solid #333;
  opacity: 0.5;
}

