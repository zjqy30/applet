/* pages/mine/mineindex/mineindex.wxss */

page {
  background: #f2f2f2;
}

.hover {
  background: #f2f2f2;
}

.hidden {
  display: none;
}

.show {
  display: block;
}

.wx-top {
  height: 314rpx;
  /* background: #FF4E4E; *//* 渐变色 */
  background: -webkit-linear-gradient(left, #f03, #ff4e4e);
  overflow: hidden;
  position: relative;
  display: table-cell;
  vertical-align: middle;
  width: 100vw;
}

.wx-headpic {
  float: left;
  width: 150rpx;
  height: 150rpx;
  margin-left: 30rpx;
  margin-right: 40rpx;
}

.wx-headpic image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
}

.wx-login {
  float: left;
  vertical-align: center;
  margin-top: 35rpx;
}

.wx-login text {
  display: block;
  color: #fff;
  font-size: 30rpx;
}

.wx-nikename {
  font-weight: bold;
  margin-bottom: 10rpx;
}

.wx-login .wx-logininfo {
  font-size: 22rpx;
  margin-top: 10rpx;
}

.wx-function {
  margin-top: 24rpx;
  background: #fff;
  overflow: hidden;
}

.wx-each {
  overflow: hidden;
  color: #858585;
  font-size: 26rpx;
  padding: 28rpx 28rpx;
  position: relative;
}

.wx-each image {
  width: 32rpx;
  height: 32rpx;
  float: left;
  margin-top: 4rpx;
  margin-right: 20rpx;
}

.wx-each text {
  float: left;
}

.wx-each::after {
  content: '';
  width: 14rpx;
  height: 22rpx;
  position: absolute;
  right: 20rpx;
  margin: auto 0;
  top: 0;
  bottom: 0;
  background: url(data:image/png;base64,) no-repeat center;
  background-size: 100% 100%;
}

.wx-each {
  border-bottom: 2rpx solid #f2f2f2;
}

.wx-icon image {
  width: 32rpx !important;
  height: 32rpx !important;
  margin-top: 4rpx;
}

/* 去除button的默认样式 */

button {
  padding: 0;
  text-align: left;
  font-size: 26rpx;
  background: #fff;
  color: #858585;
  height: 40rpx;
  line-height: 40rpx;
}

button::after {
  padding: 0;
  border: 0;
  border-radius: 0;
}

.btn-hover {
  background: none;
}

/* 遮罩 */

.zhezhao {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #999;
  z-index: 10;
  top: 0;
  left: 0;
  opacity: 0.5;
}

.hidden {
  display: none;
}

/* 网红选择 */

.wx-select {
  width: 75%;
  height: 70%;
  background: #fff;
  position: absolute;
  top: 180rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  padding: 40rpx 60rpx;
  border-radius: 10rpx;
  z-index: 11;
  font-size: 28rpx;
  color: #333;
}

.wx-two {
  text-align: center;
  width: 100%;
  height: 100%;
  margin-top: 60rpx;
}

.wx-dentify {
  margin-bottom: 40rpx;
}

.wx-dentify image {
  margin-bottom: 20rpx;
  width: 136rpx;
  height: 136rpx;
}

.wx-dentify text {
  display: block;
}

.wx-select-title icon {
  position: absolute;
  right: 20rpx;
  top: 10rpx;
}

/* 主要的模块 */
.wx-main,.wx-main2 {
  padding: 20rpx 0;
  background: #fff;
  overflow: hidden;
  text-align: center;
  margin-top:30rpx;
}
.wx-main2 .wx-main-each{
    width: 25%;
}
.wx-main2 .wx-img {
  margin-left:65rpx!important;
}
.wx-main-each {
 float: left;
  width: 20%;
text-align: center;
overflow: hidden;
}

.wx-main-each .wx-img {
  width: 60rpx;
  height: 60rpx;
  position: relative;
  margin-left:50rpx;
}

.wx-main-each image {
  width: 100%;
  height: 100%;
}

.wx-main-each text {
  display: block;
  color: #858585;
  font-size: 20rpx;
  margin-top:20rpx;
}
