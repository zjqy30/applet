/* pages/mine/towithdraw/towithdraw.wxss */

page {
 background: #f5f5f5;
}
.wx-hidden{
  display: none;
}
.wx-input {
 color: #333;
 font-size: 24rpx;
 padding: 24rpx 30rpx;
 overflow: hidden;
 background: #fff;
 position: relative;
 line-height: 40rpx;
}

.wx-input::after {
 content: '';
 background: #f5f5f5;
 width: calc(100% + 60rpx);
 height: 1rpx;
 position: absolute;
 top: 0;
 left: 0;
 bottom: 1rpx;
}

label {
 float: left;
 font-size: 26rpx;
 margin-right: 20rpx;
 width: 104rpx;
}

.wx-input input {
 width: calc(100% - 288rpx) !important;
 float: left;
 margin-top: -4rpx;
}

.wx-last {
 float: right;
 color: #269deb;
 width: 148rpx;
 margin-right:10rpx;
}

.wx-line::after {
 content: '';
 position: absolute;
 right: 20rpx;
 top: 0;
 bottom: 0;
 margin: auto 0;
 width: 24rpx;
 height: 24rpx;
 background: url(data:image/png;base64,) no-repeat center;
 background-size: 100%;
}

/* 分隔符 */

.wx-split {
 width: 100%;
 height: 30rpx;
 background: #f5f5f5;
}

/* 我要提现，好多money */

.wx-money {
 background: #fff;
 overflow: hidden;
 padding: 20rpx 30rpx;
 position: relative;
}
.wx-money::after{
 content: '';
 background: #f5f5f5;
 width:100%;
 height: 1rpx;
 position: absolute;
 left: 0;
 bottom:0;
}
.wx-money .wx-title {
 font-size: 24rpx;
 color: #333;
 clear: both;
}

.wx-write-money input{
 font-size: 77rpx;
 float: left;
 height: 100%;
 margin-top:20rpx;
 position: relative;
 width: calc(100% - 108rpx);
}

.wx-all {
 float: right;
 font-size: 22rpx;
 color: #f03;
 padding: 0 20rpx;
 background: #fff;
}

.wx-all::after {
 border: 1rpx solid #f03;
 border-radius: 68rpx !important;
}
.wx-yuan{
 margin-top:20rpx;
 float: left;
  font-size: 77rpx;
  width: 108rpx;
}
.wx-fee{
 width: 100%;
 background: #fff;
 overflow: hidden;
 padding: 20rpx 30rpx;
 color: #9F9F9F;
 font-size: 22rpx;
}
.wx-fee2{
 float: right;
 margin-right:60rpx;
}
.wx-info{
padding: 20px 20rpx;
color: #9F9F9F;
font-size: 16rpx;

}

.wx-submit{
width: 80%;
margin:120rpx auto;
background: #FF0033;
color: #fff;
font-size: 30rpx;
}
.wx-submit::after{
 border:0;
}