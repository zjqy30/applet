/* 下一步按钮 */

button {
  padding: 20rpx;
  font-size: 30rpx;
  background: #fff;
  color: #f03;
  margin-top: 20rpx;
}

button::after {
  padding: 20rpx;
  border: 0;
  border-radius: 0;
  border-top: 0.5rpx solid #333;
  opacity: 0.5;
}

/* 标签选择 */

.wx-labels {
  clear: both;
  /* width: calc(100% - 40rpx); */
  font-size: 20rpx;
  margin: auto auto;
  text-align: center;
  opacity: 0.7;
}

.wx-labels text {
  float: left;
  margin:0 auto;
  width: calc((100% - 106rpx) / 4);
  border: 1rpx solid #858585;
  text-align: center;
  margin-right: 30rpx;
  margin-top: 20rpx;

  padding: 10rpx 0;
}

.wx-labels text:nth-child(4n) {
  margin-right: 0;
}
