/* 轮播图 */

swiper {
  height: 512rpx;
  position: relative;
  z-index: 9;
}

swiper image {
  width: 100%;
  height: 100%;
  position: relative;
}

/* 轮播图的计数 */

.wx-num {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  color: #fff;
  font-size: 20rpx;
  z-index: 11;
}

/* 头像 */

.wx-headPic {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
  text-align: center;
}

.wx-headPic image {
  width: 100%;
  height: 100%;
  margin-top: -80rpx;
  position: relative;
  z-index: 10;
}

.wx-name {
  font-size: 28rpx;
  color: #333;
  margin-top: 48rpx;
  font-weight: 600;
}

/* 用户的基本信息 */

.wx-basicInfo {
  width: 80%;
  overflow: hidden;
  margin: 0 auto;
  text-align: center;
  color: #333;
  font-size: 26rpx;
  font-weight: 600;
}

.wx-basicInfo .wx-info {
  width: 33.3333%;
  float: left;
  text-align: center;
  position: relative;
}

.wx-info::after {
  content: '';
  position: absolute;
  top: 6rpx;
  right: 1rpx;
  bottom: 0;
  width: 0.5rpx;
  height: 100%;
  background: #f5f5f5;
}

.wx-info:last-child:after {
  background: none;
}

.wx-info text {
  display: block;
}

.wx-label {
  color: #858585;
  font-size: 22rpx;
  margin-top: 20rpx;
  font-weight: normal;
}

/* 个人简介 */

.wx-introduce {
  width: 100%;
  padding: 30rpx;
  color: #333;
  font-size: 24rpx;
  font-weight: 600;
  border-bottom: 0.5rpx solid #f5f5f5;
}

.wx-title {
  position: relative;
  padding-left: 20rpx;
  color: #333;
  font-size: 24rpx;
  font-weight: 600;
}

.wx-title::before {
  content: '';
  width: 7rpx;
  height: 80%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  margin: auto auto;
  background: -webkit-linear-gradient(left, #f03, #ff4e4e);
}

.wx-content {
  font-weight: normal;
  padding: 20rpx;
  color: #858585;
  width: calc(100% - 80rpx);
  text-indent: 2em;
}

/* 平台担保 */

.wx-plat {
  width: 100%;
  color: #858585;
  font-size: 18rpx;
  padding: 24rpx;
}

.wx-plat .wx-plat-info {
  display: inline-block;
  margin-right: 30rpx;
  overflow: hidden;
}

.wx-plat image {
  width: 23rpx;
  height: 23rpx;
  float: left;
  margin-right: 10rpx;
}

/* 分隔符 */

.wx-split {
  width: 100%;
  background: #f5f5f5;
  height: 20rpx;
}

/* 额外信息 */

.wx-extraInfo {
  padding: 30rpx;
}

.wx-models {
  color: #f03;
  font-size: 26rpx;
  font-weight: 600;
  width: 100%;
  margin: 30rpx auto;
  border-bottom: 1rpx solid #f5f5f5;
  border-top: 1rpx solid #f5f5f5;
  overflow: hidden;
}

.wx-model {
  width: calc((100% - 10rpx) / 3);
  float: left;
  text-align: center;
  padding: 20rpx 0;
  border: 1rpx solid #f5f5f5;
  border-top: 0;
}

.wx-model:first-child {
  border-left: 0;
}

.wx-model:nth-child(3n) {
  border-right: 0;
}

.wx-model:nth-child(4n) {
  border-left: 0;
}

.wx-model text {
  display: block;
}

/* 服务类型 */

.wx-services {
  margin-top: 40rpx;
  /* padding: 20rpx; */
  border-bottom: 1rpx solid #f5f5f5;
}

.wx-each {
  width: 100%;
  overflow: hidden;
  padding: 30rpx 0;
  border-top: 1rpx solid #f5f5f5;
}

.wx-type {
  float: left;
  width: 60%;
}

.wx-each  .wx-price {
  float: right;
  width: 20%;
  text-align: right;
  color: #f03;
}

/* 粉丝画像 */

.wx-fans-data {
  padding: 30rpx;
}

/* 底部按钮 */
.wx-btns{
  width: 100%;
  font-size: 20rpx;
  color: #858585;
}

.wx-btns .wx-btn{
  float: left;
}

.wx-btns image{
  width: 40rpx;
  height: 40rpx;
}
