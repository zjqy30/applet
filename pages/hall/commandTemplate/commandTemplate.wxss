/* pages/mine/servicetype/servicetype.wxss */

page {
 background: -webkit-linear-gradient(left, #f03, #ff4e4e);
 padding-top: 20rpx;
}

.hover {
 background: #f2f2f2;
}

.wx-radio {
 width: 100%;
 position: relative;
 text-align: center;
}

/* 填写 */

.wx-pic {
 display: block;
 background: #fff;
 width: 90%;
 margin: 20rpx auto;
 padding: 30rpx 0 0;
 color: #333;
 font-size: 28rpx;
}

/*  */

.wx-each-type {
 width: 75%;
 margin: 0 auto;
 padding: 42rpx;
 box-shadow: 0rpx 0rpx 8rpx #e4e4e4;
 border-radius: 4rpx;
 text-align: left;
}

.wx-price {
 float: right;
 width: 140rpx;
 position: relative;
 font-size: 34rpx;
 padding:0 0 0 34rpx;
 text-align: right;
}

.wx-price::before {
 content: '￥';
 position: absolute;
 left:0rpx;
 top:4rpx;
 color: #f03;
 font-size: 34rpx;
z-index: 10;
}

.wx-placeholder {
 color: #999;
 font-size: 30rpx;
}

/* 说明 */

.wx-info {
 display: inline-block;
 font-size: 20rpx;
 color: #858585;
 padding: 20rpx 40rpx;
 width: calc(100% - 80rpx);
 text-align: left;
}

.wx-each-type {
 position: relative;
}

.wx-price {
 position: absolute;
 right: 30rpx;
 top: 40rpx;
 bottom: 0;
 color: #f03;
 font-size: 40rpx;
 font-weight: 500;
}

.wx-icon {
 font-size: 22rpx;
 font-weight: 500;
}

/* 下一步按钮 */

button {
 padding: 20rpx;
 font-size: 30rpx;
 background: #fff;
 color: #f03;
 margin-top: 20rpx;
}

button::after {
 padding: 20rpx;
 border: 0;
 border-radius: 0;
 border-top: 0.5rpx solid #f5f5f5;
}
