/* 向左滑动实现删除操作 */

view {
 box-sizing: border-box;
}

.item-box {
 width: 700rpx;
 margin: 0 auto;
 /* padding: 40rpx 0; */
}

.items {
 width: 100%;
}

.item {
 position: relative;
 border-top: 2rpx solid #eee;
 height: 120rpx;
 line-height: 120rpx;
 overflow: hidden;
}

.item:last-child {
 border-bottom: 2rpx solid #eee;
}

.inner {
 position: absolute;
 top: 0;
}

.inner.txt {
 width: 100%;
 z-index: 5;
 /* padding: 0 10rpx; */
 transition: left 0.2s ease-in-out;
 white-space: nowrap;
 overflow: hidden;
 text-overflow: ellipsis;
 position: relative;
 background: #fff;
}

.inner.del {
 /* position: relative; */
 width: 180rpx;
 text-align: center;
 z-index:1;
 right: 0;
 color: #fff;
 background: #f03;
}

.item-icon {
 width: 64rpx;
 height: 120rpx;
 vertical-align: middle;
 margin-right: 16rpx;
}
